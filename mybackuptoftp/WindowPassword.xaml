<Window x:Class="mybackuptoftp.WindowPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mybackuptoftp"
        mc:Ignorable="d"
        Title="" Height="120" Width="200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        IsManipulationEnabled="False"
        Topmost="True">
    <StackPanel>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Contraseña" Grid.Column="0" Grid.Row="0"></Label>
            <PasswordBox Grid.Column="1" Grid.Row="0" x:Name="pbPassword"></PasswordBox>
        </Grid>
        <Button Margin="5" x:Name="btAccept" Width="100" HorizontalAlignment="Center" Content="Guargar"></Button>
        <Button Margin="5" x:Name="btClose" Width="100" HorizontalAlignment="Center" Content="Cancelar"></Button>

    </StackPanel>
</Window>
